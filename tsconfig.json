{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2015", "es6", "es7", "dom"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["./src/**/*", "./src/*"],
  "exclude": ["node_modules", "dist"]
}
